{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "ESNext",
		"skipLibCheck": true,

		"moduleResolution": "bundler",
		"noEmit": true,
		"allowImportingTsExtensions": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true
	},
	"exclude": ["node_modules"],
	"include": ["./src", "module.d.ts"]
}
